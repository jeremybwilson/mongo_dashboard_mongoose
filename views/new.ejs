<% include partials/header %>
        <div class="container">
            <div class="row">
                <div class="col">
                    <% include partials/nav %>
                </div>
            </div>
            <form action="/hops" class='user-form' method="POST">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label for='name'>Hop name:</label>
                        <input class='form-control' type='text' name='name' id='name'>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for='origin'>Origin:</label>
                        <input class='form-control' type='text' name='origin' id='origin'>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for='type'>Type:</label>
                        <select class="custom-select" name="type" id="type">
                            <option selected>Open this select menu</option>
                            <% for(const variety of varieties) { %>
                            <option value="<%= variety %>"><%= variety %></option>
                            <% } %>
                        </select>
                        <!-- <input class='form-control' type='text' name='type' id='type'> -->
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label for='alpha_low'>Alpha (low):</label>
                        <input class='form-control' type='text' name='alpha[low]' id='low'>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label for='alpha_high'>Alpha (high):</label>
                        <input class='form-control' type='text' name='alpha[high]' id='high'>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for='description'>Description:</label>
                        <textarea class='form-control' name='description' id='description'></textarea>
                    </div>
                    <div class="form-group">
                        <button class='btn btn-primary btn-sm' type='submit'>Submit</button>
                    </div>
                </div>
            </div>
            </form>
            <div class="row">
                <div class="col">
                    <p><a href='/' class='btn btn-primary btn-sm'>Skip to View All Hops</a></p>
                    <div class="errors">
                    <% if(messages.create_error) { %>
                        <% for (const key of messages.create_error) { %>
                            <p><%= key %></p>
                        <% } %>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
<% include partials/footer %>